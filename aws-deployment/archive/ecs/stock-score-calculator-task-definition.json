{
  "family": "stock-score-calculator-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::952189540759:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::952189540759:role/mem-dashboard-task-role",
  "containerDefinitions": [
    {
      "name": "score-calculator-container",
      "image": "952189540759.dkr.ecr.ap-east-1.amazonaws.com/mem-dashboard:20251030-yfinance-v2-fixed",
      "essential": true,
      "command": [
        "/bin/bash",
        "-c",
        "cd /app && python3 yrealtime/daily_score_calculator_db.py"
      ],
      "environment": [
        {
          "name": "DJANGO_SETTINGS_MODULE",
          "value": "django_api.settings"
        },
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "ap-east-1"
        }
      ],
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "arn:aws:secretsmanager:ap-east-1:952189540759:secret:mem-dashboard/database:host::"
        },
        {
          "name": "DB_NAME",
          "valueFrom": "arn:aws:secretsmanager:ap-east-1:952189540759:secret:mem-dashboard/database:dbname::"
        },
        {
          "name": "DB_USER",
          "valueFrom": "arn:aws:secretsmanager:ap-east-1:952189540759:secret:mem-dashboard/database:username::"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:ap-east-1:952189540759:secret:mem-dashboard/database:password::"
        },
        {
          "name": "DB_PORT",
          "valueFrom": "arn:aws:secretsmanager:ap-east-1:952189540759:secret:mem-dashboard/database:port::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/stock-score-calculator",
          "awslogs-region": "ap-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "tags": [
    {
      "key": "Project",
      "value": "MEM-Dashboard"
    },
    {
      "key": "Environment",
      "value": "production"
    },
    {
      "key": "Purpose",
      "value": "Daily-Stock-Score-Calculation"
    },
    {
      "key": "DeploymentDate",
      "value": "2025-10-30"
    }
  ]
}

